{
  "buildCommand": "npx expo export --platform web",
  "outputDirectory": "dist",
  "trailingSlash": true,
  "rewrites": [
    { "source": "/privacy",         "destination": "/index.html" },
    { "source": "/privacy/",        "destination": "/index.html" },
    { "source": "/reset-password",  "destination": "/index.html" },
    { "source": "/reset-password/", "destination": "/index.html" },
    { "source": "/(.*)",            "destination": "/index.html" }
  ]
}